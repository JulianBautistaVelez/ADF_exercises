{
	"name": "csv_input_files",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureDataLake",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"source_file_name": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@dataset().source_file_name",
					"type": "Expression"
				},
				"folderPath": "dataInput",
				"fileSystem": "testcontainer"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "OrderDate",
				"type": "String"
			},
			{
				"name": "ProductKey",
				"type": "String"
			},
			{
				"name": "Country",
				"type": "String"
			},
			{
				"name": "EnglishProductName",
				"type": "String"
			},
			{
				"name": "SalesAmount",
				"type": "String"
			},
			{
				"name": "TaxAmt",
				"type": "String"
			}
		]
	}
}